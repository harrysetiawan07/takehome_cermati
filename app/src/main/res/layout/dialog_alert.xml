<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:padding="10dp">

    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_width="@dimen/alert_width"
        android:layout_height="wrap_content"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_centerInParent="true"
            android:id="@+id/customdialog"
            android:orientation="vertical"
            android:background="@color/md_white_1000"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_marginLeft="5dp"
                    android:layout_gravity="center"
                    android:paddingLeft="5dp"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_margin="5dp"
                    android:src="@mipmap/ic_alert_line"/>
                <TextView
                    android:id="@+id/title"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/titleInformationDialog"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textColor="@color/md_red_800"
                    android:textSize="@dimen/fonts_14"
                    android:paddingLeft="5dp"
                    android:paddingBottom="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:paddingTop="5dp"
                android:paddingBottom="15dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentTop="true">

                <TextView
                    android:id="@+id/isi"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:textColor="@color/md_black_1000_75"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:minHeight="50dp"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/fonts_15"
                    android:gravity="center_horizontal"
                    android:text="Content"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <Button
                        android:layout_margin="3dp"
                        android:layout_alignParentBottom="true"
                        android:layout_height="@dimen/height_40"
                        android:gravity="center"
                        android:text="@string/ok"
                        android:textColor="@color/md_white_1000"
                        android:id="@+id/btn_ok"
                        android:textSize="@dimen/fonts_14"
                        android:textAllCaps="true"
                        android:background="@drawable/button_customs"
                        android:layout_width="wrap_content"
                        android:minWidth="@dimen/width_80"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>